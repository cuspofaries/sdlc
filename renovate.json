{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "docker:enableMajor",
    ":semanticCommits",
    "schedule:earlyMondays"
  ],

  "labels": ["dependencies", "automated"],

  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security", "vulnerability"],
    "schedule": ["at any time"]
  },

  "osvVulnerabilityAlerts": true,
  "separateMinorPatch": true,
  "prConcurrentLimit": 5,
  "prHourlyLimit": 2,

  "packageRules": [
    {
      "description": "Never auto-merge â€” all PRs require human review",
      "matchPackagePatterns": ["*"],
      "automerge": false
    },
    {
      "description": "Group all Docker updates",
      "matchDatasources": ["docker"],
      "groupName": "Docker images",
      "labels": ["dependencies", "docker"]
    },
    {
      "description": "Group Python dependency updates",
      "matchManagers": ["pip_requirements"],
      "groupName": "Python dependencies"
    },
    {
      "description": "Flag major updates for manual review",
      "matchUpdateTypes": ["major"],
      "labels": ["dependencies", "major-update", "manual-review"]
    },
    {
      "description": "Security updates bypass schedule (still require review)",
      "matchCategories": ["security"],
      "schedule": ["at any time"],
      "prPriority": 10
    },
    {
      "description": "Group all pinned tool version updates",
      "matchManagers": ["custom.regex"],
      "groupName": "Pinned tool versions",
      "labels": ["dependencies", "toolchain"]
    }
  ],

  "customManagers": [
    {
      "customType": "regex",
      "description": "Pinned tool versions in Taskfile.yml and workflow YAML",
      "fileMatch": [
        "Taskfile\\.yml$",
        "\\.github/workflows/.*\\.yml$",
        "azure-pipelines/.*\\.yml$"
      ],
      "matchStrings": [
        "'(?<currentValue>[^']+)'\\s+#\\s*renovate:\\s*datasource=(?<datasource>[^\\s]+)\\s+depName=(?<depName>[^\\s]+)",
        "\\s(?<currentValue>v[\\d.]+)\\s+#\\s*renovate:\\s*datasource=(?<datasource>[^\\s]+)\\s+depName=(?<depName>[^\\s]+)"
      ],
      "versioningTemplate": "{{#if (equals datasource 'npm')}}npm{{else}}semver{{/if}}"
    }
  ]
}
